{
    "manifest_version": 3,
    "name": "Where is my Dst?",
    "version": "2.0.0",
    "description": "Reveal the geographic origin of web requests and block traffic by country.",
    "permissions": [
        "activeTab",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "webRequest",
        "webNavigation",
        "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}